# ===== 应用基础配置 =====
# 应用名称
APP_NAME=fst-platform
# 运行模式：dev = 开发环境 | prod = 生产环境
APP_MODE=dev
# 服务监听端口
PORT=8080

# ===== 数据库配置 =====
# 数据库驱动类型：mysql | postgres | sqlite
DB_DRIVER=mysql
# 数据库主机地址
DB_HOST=127.0.0.1
# 数据库端口
DB_PORT=3306
# 数据库用户名
DB_USER=root
# 数据库密码
DB_PASSWORD=root
# 数据库名称
DB_NAME=fst_platform

# ===== 极验验证码配置 =====
# 极验行为验证 ID（GeeTest CaptchaID）
GEETEST_ID=
# 极验行为验证密钥（GeeTest Key）
GEETEST_KEY=

# ===== 安全与功能开关 =====
# JWT 签名密钥，生产环境请务必修改为强随机字符串
JWT_SECRET=your_jwt_secret
# 管理后台路由前缀路径
ADMIN_PATH=/system-mgr
# 是否启用极验验证码：true = 开启 | false = 关闭
GEETEST_ENABLED=true
# 是否启用 Swagger API 文档：true = 开启 | false = 关闭
ENABLE_SWAGGER=true

# ===== 邮件服务配置 (SMTP) =====
# SMTP 服务器地址
SMTP_HOST=
# SMTP 服务器端口（465 为 SSL，587 为 STARTTLS）
SMTP_PORT=465
# SMTP 登录用户名
SMTP_USERNAME=
# SMTP 登录密码 / 授权码
SMTP_PASSWORD=
# SSL 加密类型：ssl | tls | none
SMTP_SSL_TYPE=ssl
# 邮件编码格式
SMTP_ENCODING=utf-8
# 系统发件人显示名称
SYSTEM_EMAIL_NAME=FST
# 系统发件人邮箱地址
SYSTEM_EMAIL_ADDRESS=

# ===== 前端显示与跨域配置 =====
# 页面标题，显示在浏览器标签栏
APP_TITLE=FST Platform
# CORS 允许的来源域名，* 表示允许所有（生产环境建议指定具体域名）
CORS_ORIGINS=*

# ===== 注册与登录安全策略 =====
# 注册验证码有效期（单位：分钟）
REGISTER_CODE_EXPIRE_MINUTES=15
# 登录最大连续失败次数，超过后将锁定账户
LOGIN_MAX_FAILURE_COUNT=5
# 登录失败锁定时长（单位：分钟）
LOGIN_LOCK_DURATION_MINUTES=10
# JWT Access Token 有效期（单位：秒，7200 = 2小时）
JWT_ACCESS_EXPIRE=7200
# JWT Refresh Token 有效期（单位：秒，604800 = 7天）
JWT_REFRESH_EXPIRE=604800

# ===== 定时任务配置 =====
# 验证码清理任务执行间隔（单位：分钟，默认 10）
CLEANUP_INTERVAL_MINUTES=10
